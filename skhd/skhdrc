# change window focus within space
alt - j : yabai -m window --focus south
alt - k : yabai -m window --focus north
alt - h : yabai -m window --focus west
alt - l : yabai -m window --focus east


#change focus between external displays (left and right)
alt - s: yabai -m display --focus west
alt - g: yabai -m display --focus east

# rotate layout clockwise
lshift + alt - r : yabai -m space --rotate 270

# flip along y-axis
lshift + alt - y : yabai -m space --mirror y-axis

# flip along x-axis
lshift + alt - x : yabai -m space --mirror x-axis

# toggle window float
lshift + alt - t : yabai -m window --toggle float --grid 4:4:1:1:2:2


# maximize a window
lshift + alt - m : yabai -m window --toggle zoom-fullscreen

# balance out tree of windows (resize to occupy same area)
lshift + alt - e : yabai -m space --balance

# swap windows
lshift + alt - j : yabai -m window --swap south
lshift + alt - k : yabai -m window --swap north
lshift + alt - h : yabai -m window --swap west
lshift + alt - l : yabai -m window --swap east

# move window and split
ctrl + alt - j : yabai -m window --warp south
ctrl + alt - k : yabai -m window --warp north
ctrl + alt - h : yabai -m window --warp west
ctrl + alt - l : yabai -m window --warp east

# move window to display left and right
lshift + alt - s : yabai -m window --display west; yabai -m display --focus west;
lshift + alt - g : yabai -m window --display east; yabai -m display --focus east;

#move window to prev and next space
lshift + alt - p : yabai -m window --space prev;
lshift + alt - n : yabai -m window --space next;

# move window to space #
lshift + alt - 1 : yabai -m window --space 1;
lshift + alt - 2 : yabai -m window --space 2;
lshift + alt - 3 : yabai -m window --space 3;
lshift + alt - 4 : yabai -m window --space 4;
lshift + alt - 5 : yabai -m window --space 5;
lshift + alt - 6 : yabai -m window --space 6;
lshift + alt - 7 : yabai -m window --space 7;
lshift + alt - 8 : yabai -m window --space 8;
lshift + alt - 9 : yabai -m window --space 9;

# stop/start/restart yabai
ctrl + alt - q : yabai --stop-service
ctrl + alt - s : yabai --start-service
ctrl + alt - r : yabai --restart-service
